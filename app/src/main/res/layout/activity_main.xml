<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tl_content"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/background_main"
        android:elevation="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <HorizontalScrollView android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_viewtzjsq"
                        android:onClick="clicklist"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        card_view:cardPreventCornerOverlap="true"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardCornerRadius="8dp">

                        <TextView
                            android:id="@+id/tzjsqtext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="@string/tizhong" />

                        <ImageView
                            android:id="@+id/tzjsqimage"
                            android:layout_width="228dp"
                            android:layout_height="118dp"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/tizhong"/>

                        <TextView
                            android:id="@+id/tzjsqImageViewText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignLeft="@+id/tzjsqimage"
                            android:layout_alignTop="@+id/tzjsqimage"
                            android:layout_alignRight="@+id/tzjsqimage"
                            android:layout_alignBottom="@+id/tzjsqimage"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="4dp"
                            android:maxLines="1"
                            android:gravity="bottom"
                            android:text="@string/tizhongtip"
                            android:textColor="#000000" />

                    </androidx.cardview.widget.CardView>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/charroomid"
                        android:onClick="clicklist"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        card_view:cardPreventCornerOverlap="true"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardCornerRadius="8dp">

                        <TextView
                            android:id="@+id/charroom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="@string/charroomname"/>

                        <ImageView
                            android:id="@+id/charroomimg"
                            android:layout_width="228dp"
                            android:layout_height="108dp"
                            android:layout_marginTop="18dp"
                            android:src="@drawable/chat" />
                        <TextView
                            android:id="@+id/charroomtext"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignLeft="@+id/charroomimg"
                            android:layout_alignTop="@+id/charroomimg"
                            android:layout_alignRight="@+id/charroomimg"
                            android:layout_alignBottom="@+id/charroomimg"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="4dp"
                            android:gravity="bottom"
                            android:maxLines="1"
                            android:text="@string/charroomnametip"
                            android:textColor="#000000" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"

                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/wlts"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:onClick="clicklist"
                        android:foreground="?android:attr/selectableItemBackground"
                        card_view:cardPreventCornerOverlap="true"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardCornerRadius="8dp">

                        <TextView
                            android:id="@+id/wltstitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="@string/wlts" />

                        <ImageView
                            android:id="@+id/wltsimage"
                            android:src="@drawable/wlts"
                            android:layout_width="228dp"
                            android:layout_height="108dp"
                            android:layout_marginTop="18dp" />

                        <TextView
                            android:id="@+id/wltstext"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignLeft="@+id/wltsimage"
                            android:layout_alignTop="@+id/wltsimage"
                            android:layout_alignRight="@+id/wltsimage"
                            android:layout_alignBottom="@+id/wltsimage"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="4dp"
                            android:maxLines="1"
                            android:gravity="bottom"
                            android:text="@string/wltstip"
                            android:textColor="#000000" />

                    </androidx.cardview.widget.CardView>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/yuanshenfuzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:onClick="clicklist"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        card_view:cardPreventCornerOverlap="true"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardCornerRadius="8dp">

                        <TextView
                            android:id="@+id/yuanshenfuzhutext"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="@string/ysfz" />

                        <ImageView
                            android:id="@+id/yuanshenfuzhuimg"
                            android:layout_width="230dp"
                            android:layout_height="118dp"
                            android:layout_marginTop="18dp"
                            android:src="@drawable/jqqd"/>

                        <TextView
                            android:id="@+id/tzjsqImageViewTexttttnnn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignLeft="@+id/tesfsaimannn"
                            android:layout_alignTop="@+id/tesfsaimannn"
                            android:layout_alignRight="@+id/tesfsaimannn"
                            android:layout_alignBottom="@+id/tesfsaimannn"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="4dp"
                            android:gravity="bottom"
                            android:text="@string/jqqd"
                            android:textColor="#000000" />
                    </androidx.cardview.widget.CardView>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="0dp">
                    <TextView
                        android:id="@+id/cishutexty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="@string/fangwenrenshu"
                        tools:visibility="visible" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:id="@+id/sm"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="@string/copyright"
                        tools:visibility="visible"
                        android:inputType="textMultiLine"
                        android:gravity="center_horizontal"
                        android:ellipsize  = "none"
                        android:maxLines="100"
                        android:scrollHorizontally="false"/>

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

</LinearLayout>


