<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="580dp"
        android:orientation="vertical"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="60dp"
        >
<!--        android:background="@drawable/radius_skip_3"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="注册ID"
            android:textColor="#82B2E1"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/registerusernameedit"
                android:hint="用户名(字母/数字)|用于登录"
                android:layout_width="260dp"
                android:layout_height="42dp"
                android:inputType="textNoSuggestions"
                android:padding="6dp"
                android:background="@drawable/radius_skip_2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/registerfirstnameedit"
                android:hint="头像(完整图片url)|可选"
                android:layout_width="260dp"
                android:layout_height="42dp"
                android:inputType="text"
                android:padding="6dp"
                android:background="@drawable/radius_skip_2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/registerlastnameedit"
                android:hint="昵称"
                android:layout_width="260dp"
                android:layout_height="42dp"
                android:inputType="textPersonName"
                android:padding="6dp"
                android:background="@drawable/radius_skip_2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/registerpasswordedit"
                android:hint="密码"
                android:layout_width="260dp"
                android:layout_height="42dp"
                android:inputType="textPassword"
                android:padding="6dp"
                android:background="@drawable/radius_skip_2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="2dp">
            <TextView
                android:id="@+id/pwd_weak"
                android:layout_width="30dp"
                android:layout_height="18.54dp"
                android:gravity="center"
                android:background="#EBC1C1C1"
                android:text="弱" />
            <TextView
                android:id="@+id/pwd_in"
                android:layout_width="30dp"
                android:layout_height="18.54dp"
                android:gravity="center"
                android:background="#EBC1C1C1"
                android:text="中"/>
            <TextView
                android:id="@+id/pwd_strong"
                android:layout_width="30dp"
                android:layout_height="18.54dp"
                android:gravity="center"
                android:background="#EBC1C1C1"
                android:text="强"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/registerpasswordedit_qr"
                android:hint="确认密码"
                android:layout_width="260dp"
                android:layout_height="42dp"
                android:inputType="textPassword"
                android:padding="6dp"
                android:background="@drawable/radius_skip_2"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/registeryqm"
                android:hint="邀请码"
                android:layout_width="260dp"
                android:layout_height="42dp"
                android:inputType="text"
                android:padding="6dp"
                android:background="@drawable/radius_skip_2"
                />

        </LinearLayout>
        <Button
            android:id="@+id/registerbutton"
            android:onClick="clickcharaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"
            android:background="@drawable/setbar_bg"
            android:textSize="18sp"
            android:text="@string/register"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="@string/registertip"
            android:textColor="#474444"
            android:textStyle="normal|italic"/>

    </LinearLayout>




</LinearLayout>
