<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="第一步：登录米游社（登录页面可以滑动）"
            android:textSize="16dp" />

        <WebView
            android:id="@+id/webidsforys"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_height="450dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="第二步：选择链接使用的平台"
            android:textSize="16dp" />

        <Spinner android:id="@+id/Radioforchoukaxuanze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="第三步：获取链接并复制到剪贴板"
            android:textSize="16dp" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cookieBtn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="点击获取并复制链接" />

            <!--        <com.google.android.material.button.MaterialButton-->
            <!--            android:id="@+id/showcookie"-->
            <!--            android:layout_width="100dp"-->
            <!--            android:layout_height="40dp"-->
            <!--            android:text="然后显示抽卡链接"-->
            <!--            android:layout_marginLeft="20dp"-->
            <!--            android:layout_weight="1"-->
            <!--            android:insetLeft="10dp" />-->
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="12dp" />

    </LinearLayout>

</ScrollView>