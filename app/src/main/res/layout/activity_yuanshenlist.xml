<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".yuanshenlist">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/background_main">
    <LinearLayout
        android:id="@+id/ll_bar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="@dimen/cardview_default_elevation"
        android:orientation="horizontal">
        <Button
            android:id="@+id/uidxiugai"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xiugai"
            android:layout_gravity="center"
            android:background="@drawable/radius_border"/>
        <TextView
            android:id="@+id/uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uid"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/cookiehandupdate"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新cookie"
            android:layout_gravity="center"
            android:background="@drawable/radius_border"/>
</LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:gravity="left">
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_marginLeft="35dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_10dp_cornersf5f5f5">
                    <Button
                        android:id="@+id/yuanshenzdqdbutton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="@string/yuanshenzdqd"
                        android:textSize="18sp"

                        android:background="@drawable/radius_skip" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_marginRight="35dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_10dp_cornersf5f5f5">
                    <Button
                        android:id="@+id/yuanshenssbfbutton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="@string/yuanshenbq"
                        android:textSize="18sp"
                        android:background="@drawable/radius_skip"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:gravity="left">
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_marginLeft="35dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_10dp_cornersf5f5f5">
                    <Button
                        android:id="@+id/yuanshenckfxbutton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="@string/yuanshenckfxtitle"
                        android:textSize="18sp"

                        android:background="@drawable/radius_skip"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_marginRight="35dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_10dp_cornersf5f5f5">
                    <Button
                        android:id="@+id/yuanshenuserinfobutton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="@string/yuanshenuserinfo"
                        android:textSize="18sp"

                        android:background="@drawable/radius_skip"/>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="18sp"
                    android:text="@string/listtip"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#DF0F00"
                    android:textSize="20sp"
                    android:text="提示：提示ys-cookie过期后会自动跳转获取cookie页面，若功能异常可以点击上方按钮手动进入更新cookie页面更新，米游社签到里的cookie不会自动更新，也需要进入同步哦~"/>

            </LinearLayout>


        </LinearLayout>



    </ScrollView>


</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>