<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <LinearLayout
        android:id="@+id/center_layout"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/center_msg"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:maxWidth="50dp"
                android:text="time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"

        >

<!--        <ImageView-->
<!--            android:id="@+id/iv_head_others"-->
<!--            android:background="@drawable/headofothers"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="60dp" />-->
        <TextView
            android:id="@+id/others_name"
            android:text="陌生人|"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:background="@drawable/radius_border"
            android:textColor="#52DDEF"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">
<!--            <TextView-->
<!--                android:id="@+id/others_name"-->
<!--                android:text="默认昵称陌生人"-->
<!--                android:layout_gravity="left"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content" />-->
            <TextView
                android:id="@+id/left_msg"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:maxWidth="200dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/chat_msg_left"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--            <TextView-->
            <!--                android:id="@+id/my_name"-->
            <!--                android:layout_gravity="right"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="默认昵称"-->
            <!--                />-->
            <TextView
                android:id="@+id/right_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/chat_msg_right"
                android:maxWidth="200dp"

                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:textSize="18sp"
            android:textColor="#000000"
            android:background="@drawable/radius_border"
            android:text="默认昵称"
            />
<!--        <ImageView-->
<!--            android:id="@+id/iv_head_my"-->
<!--            android:background="@drawable/headofmy"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="60dp" />-->

    </LinearLayout>

</LinearLayout>
