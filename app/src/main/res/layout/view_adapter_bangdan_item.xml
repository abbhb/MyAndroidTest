<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <View
        android:id="@+id/viewAccLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_ebeb" />

    <RelativeLayout
        android:id="@+id/rlAccContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rivAccCoverImg"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_book_list_default"
            app:riv_corner_radius_bottom_left="3dp"
            app:riv_corner_radius_bottom_right="3dp"
            app:riv_corner_radius_top_left="3dp"
            app:riv_corner_radius_top_right="3dp"
            app:riv_oval="false" />

        <TextView
            android:id="@+id/tvAccCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/rivAccCoverImg"
            android:text="name"
            android:textColor="@color/gray_6666"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_adapter_ba_item_showall" />

    </RelativeLayout>

</LinearLayout>