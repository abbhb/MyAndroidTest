<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <declare-styleable name="StrokeImageView">

        <attr name="shapeMode" format="enum">
            <enum name="circle" value="0" />
            <enum name="roundRect" value="1" />
        </attr>

        <attr name="roundRadius" format="dimension" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeColor" format="color" />
    </declare-styleable>

    <!--
Refer to App Widget Documentation for margin information
http://developer.android.com/guide/topics/appwidgets/index.html#CreatingLayout
    -->
    <dimen name="widget_margin">0dp</dimen>
    <dimen name="fab_margin">16dp</dimen>
    <dimen name="big_font_size">25sp</dimen>
    <dimen name="default_font_size">20sp</dimen>
    <dimen name="small_font_size">18sp</dimen>
    <dimen name="bigger_font_size">25sp</dimen>
</resources>